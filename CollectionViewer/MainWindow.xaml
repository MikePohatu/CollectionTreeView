<Window x:Class="CollectionViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CollectionViewer"
        xmlns:gv="clr-namespace:Microsoft.Msagl.GraphViewerGdi;assembly=Microsoft.Msagl.GraphViewerGDI"
        mc:Ignorable="d"
        Title="Collection Tree View" Height="350" Width="525">
    <Grid>
        <TabControl>
            <TabItem Header="Device Collections">
                <Grid>
                    <WindowsFormsHost Name="windowsFormsHostDevice" Margin="0,0,0,0">
                        <gv:GViewer x:Name="DeviceColViewer"></gv:GViewer>
                    </WindowsFormsHost>
                </Grid>
            </TabItem>
            <TabItem Header="User Collections">
                <Grid>
                    <WindowsFormsHost Name="windowsFormsHostUser" Margin="0,0,0,0">
                        <gv:GViewer x:Name="UserColViewer"></gv:GViewer>
                    </WindowsFormsHost>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
