<Window x:Class="Visualizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Visualizer"
        xmlns:gv="clr-namespace:Microsoft.Msagl.GraphViewerGdi;assembly=Microsoft.Msagl.GraphViewerGDI"
        mc:Ignorable="d"
        Title="Visualizer4CM" Height="Auto">

    <DockPanel  Grid.Row="0">
        <TabControl x:Name="maintabctrl">
            <TabItem x:Name="devtab" Header="{Binding Header}" Content="{Binding Pane}" />
            <TabItem x:Name="usertab" Header="{Binding Header}" Content="{Binding Pane}"/>
            <TabItem x:Name="apptab" Header="{Binding Header}" Content="{Binding Pane}"/>
            <TabItem x:Name="packagetab" Header="{Binding Header}" Content="{Binding Pane}" />
            <TabItem x:Name="deploymenttab" Header="{Binding Header}" Content="{Binding Pane}"/>
        </TabControl>
    </DockPanel>
</Window>
